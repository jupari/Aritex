                        </Label>
                        <Label
                            Grid.Column="0"
                            Grid.Row="1"
                            FontAttributes="None"
                            FontSize="Small"
                            Text="Total Vtas Diarias"
                            TextColor="White">
                        </Label>
                        <Label
                            Grid.Column="1"
                            Grid.Row="1"
                            FontAttributes="None"
                            FontSize="Small"
                            Text="{Binding Valor025,StringFormat='${0:N3}'}"
                            TextColor="White">
                        </Label>
                    </Grid>
                </Frame>

            </StackLayout>            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>