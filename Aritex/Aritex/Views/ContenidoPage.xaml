                            FontAttributes="Bold"
                            FontSize="Small"
                            Text="CEDI BQUILLA"
                            TextColor="White">
                        </Label>
                        <Label
                            Grid.Column="0"
                            Grid.Row="1"
                            FontAttributes="None"
                            FontSize="Small"
                            Text="Total Vtas Diarias"
                            TextColor="White">
                        </Label>
                        <Label
                            Grid.Column="1"
                            Grid.Row="1"
                            FontAttributes="None"
                            FontSize="Small"
                            Text="{Binding Valor008,StringFormat='${0:N3}'}"
                            TextColor="White">
                        </Label>
                    </Grid>
                </Frame>
                <Frame
                    CornerRadius="20"
                    HasShadow="true"
                    HeightRequest="50"
                    BackgroundColor="Orange">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Column="0"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="Small"
                            Text="REMATE">
                        </Label>
                        <Label
                            Grid.Column="0"
                            Grid.Row="1"
                            FontAttributes="None"
                            FontSize="Small"
                            Text="Total Vtas Diarias">
